{% for port in hostvars[host].exposed_ports | sort %}
    rdr {{ baremetal_extnic }} 0.0.0.0/0 port {{ port.src }} -> {{ port.address | default(hostvars[host].address) }} port {{ port.dest }}
{% endfor %}
