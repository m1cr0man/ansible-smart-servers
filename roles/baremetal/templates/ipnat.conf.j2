{% for host in query('inventory_hostnames', 'all') | sort -%}
{% if hostvars[host].is_zone -%}
    rdr {{ baremetal_extnic }} 0.0.0.0/0 port {{ hostvars[host].ansible_ssh_port }} -> {{ hostvars[host].address }} port 22
