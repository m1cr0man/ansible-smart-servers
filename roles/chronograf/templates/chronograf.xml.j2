<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='chronograf'>
  <service name='site/chronograf' type='service' version='1'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <dependency name='network' grouping='require_all' restart_on='refresh' type='service'>
      <service_fmri value='svc:/milestone/network:default'/>
    </dependency>
    <dependency name='filesystem' grouping='require_all' restart_on='refresh' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>
    <dependency name='config_data' grouping='require_all' restart_on='restart' type='path'>
      <service_fmri value='file://localhost{{ chronograf_data_dir }}'/>
    </dependency>
    <method_context working_directory='{{ chronograf_data_dir }}'>
      <method_environment>
        <envvar name='PATH' value='/usr/bin:/bin:/opt/csw/bin:/opt/local/bin'/>
        <envvar name='HOME' value='{{ chronograf_data_dir }}'/>
        <envvar name='PWD' value='{{ chronograf_data_dir }}'/>
        <envvar name='BOLT_PATH' value='{{ chronograf_data_dir }}/chronograf-v1.db'/>
        <envvar name='PORT' value='80'/>
        <envvar name='HOST' value='{{ address }}'/>
        <envvar name='INFLUXDB_URL' value='http://localhost:8086'/>
      </method_environment>
    </method_context>
    <exec_method name='start' type='method' exec='chronograf' timeout_seconds='30'/>
    <exec_method name='stop' type='method' exec=':kill' timeout_seconds='30'/>
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='child'/>
      <propval name='ignore_error' type='astring' value='core,signal'/>
    </property_group>
    <property_group name='application' type='application'> </property_group>
    <stability value='Evolving'/>
    <template>
      <common_name>
        <loctext xml:lang='C'>Time series data viewer</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
